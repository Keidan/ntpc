{
  "configurations": [
    {
      "name": "Win32",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/src"
      ],
      "defines": [
        "_DEBUG",
        "WIN32",
        "_WIN32",
        "DEBUG",
        "_SILENCE_CXX17_ITERATOR_BASE_CLASS_DEPRECATION_WARNING",
        "WIN32_LEAN_AND_MEAN",
        "NOMINMAX"
      ],
      "windowsSdkVersion": "10.0.19041.0",
      "compilerPath": "cl.exe",
      "cStandard": "c23",
      "cppStandard": "c++20",
      "intelliSenseMode": "windows-msvc-x64",
      "configurationProvider": "ms-vscode.cpptools"
    },
    
    {
      "name": "Linux",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/src",
        "/usr/include"
      ],
      "defines": [
        "_DEBUG",
        "DEBUG",
        "NOMINMAX"
      ],
      "compilerPath": "/usr/bin/gcc",
      "cStandard": "c23",
      "cppStandard": "c++20",
      "intelliSenseMode": "linux-gcc-x64",
      "configurationProvider": "ms-vscode.cmake-tools"
    }
  ],
  "version": 4
}